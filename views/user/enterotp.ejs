    <!DOCTYPE html>
<html>
<head>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            max-width: 400px;
            padding: 20px;
            background-color: #f4f4f4;
            border: 1px solid #ddd;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            font-size: 24px;
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-weight: bold;
        }

        input[type="text"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
            font-size: 16px;
        }
    </style>
    
</head>
<body>
    <div class="container">
        <h2>Enter OTP</h2>
        <form action="/otpenter" method="post">
            <div class="form-group">
                <label for="otp">Enter OTP:</label>
                <input type="text" class="form-control" id="otp" name="otp" placeholder="Enter OTP" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <button type="button" class="btn btn-primary" id="resendOTP">Resend OTP</button> 
            <div id="resendMessage" style="color: rgb(174, 0, 0); display: none;">
                <div id="countdownTimer" style="color: blue;"></div>
                You can resend OTP in <span id="countdown">1:00</span>
            </div>
            <p id="newOtp" style="color: green;"></p>
        </form>
        <% 
        if (typeof message !== 'undefined') { 
        %>
            <p style="color: rgb(174, 0, 0);"><%= message %></p>
        <%
        }
        %>
    </div>



    <script>
        let countdownTime = 60; 
        let countdownInterval;
        let isResending = false; 
    
        const updateCountdown = () => {
            const minutes = Math.floor(countdownTime / 60);
            const seconds = countdownTime % 60;
            document.getElementById('countdown').textContent = `${minutes}:${seconds < 10 ? '0' : ''}${seconds}`;
            countdownTime--;
    
            if (countdownTime < 0) {
                clearInterval(countdownInterval);
                document.getElementById('resendMessage').style.display = 'none'; 
                document.getElementById('countdown').textContent = '1:00';
                document.getElementById('resendOTP').disabled = false; 
                isResending = false; 
            }
        };
    
        document.getElementById('resendOTP').addEventListener('click', function () {
            if (isResending) {
                alert('You can resend OTP only after 1 minute.');
            } else {
                isResending = true;
                document.getElementById('resendOTP').disabled = true;
                document.getElementById('resendMessage').style.display = 'block'; // Show the message
                document.getElementById('countdown').textContent = '1:00'; // Set initial countdown value
    
                fetch('/resendOtp', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                    .then(response => response.json())
                    .then(data => {
                        countdownTime = 60;
                        countdownInterval = setInterval(updateCountdown, 1000);
                    })
                    .catch(error => {
                        console.error(error);
                        isResending = false;
                        document.getElementById('resendOTP').disabled = false;
                        document.getElementById('resendMessage').style.display = 'none'; // Hide the message on error
                    });
            }
        });
    </script>
    

   
</body>
</html>



