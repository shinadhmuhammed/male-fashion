<%- include('../layout/dashhead') %>
  
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        /* div {
            max-width: 400px;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #ffffff;
        } */

        h3 {
            text-align: center;
        }

        label {
            display: block;
            font-weight: bold;
        }

        input[type="text"],
        input[type="number"],
        textarea {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        input[type="file"] {
            width: 100%;
            margin-bottom: 10px;
        }

        button {
            background-color: #4CAF50;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }
    </style>
</head>
<body>
<div>
    <h3>Add a New Product</h3>
    <form action="/admin/addproduct" method="POST" enctype="multipart/form-data">

        <p>
            <label for="productCategory">Product Category:</label>

            <select id="productCategory" name="productCategory" required>
                <% if (category.length > 0) { %>
                    <% category.forEach(categories => {%>
                     <option value=<%= categories._id %>><%= categories.category %></option>
                     <% })%>
                     <% } else {%>
                         
                     <option value="Mens">no categories</option>
                     <% }%>

            </select>

          </p>

        <p><label for="productName">Product Name:</label>
            <input type="text" id="productName" name="productName" required></p>

        <p><label for="productImage">Product Image:</label>
            <input type="file" id="productImage" name="productImage" accept="image/*" multiple></p>

        <p><label for="productPrice">Product Price:</label>
            <input type="number" id="productPrice" name="productPrice" step="0.01" required min="0"></p>

        <p><label for="productDescription">Product Description:</label>
            <textarea id="productDescription" name="productDescription" required></textarea></p>

          
        

                <label for="productStock">Product stock:</label>
                <input type="number" id="productStock" name="productStock" required ></p>
    

        <p><button type="submit">Add Product</button></p>
    </form>
</div>
</body>
</html>


