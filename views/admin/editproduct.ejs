<%- include('../layout/dashhead') %>


<style>
    body {
        font-family: Arial, sans-serif;
    }

    /* div {
        max-width: 400px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #ffffff;
    } */

    h3 {
        text-align: center;
    }

    label {
        display: block;
        font-weight: bold;
    }

    input[type="text"],
    input[type="number"],
    textarea {
        width: 100%;
        padding: 8px;
        margin-bottom: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    input[type="file"] {
        width: 100%;
        margin-bottom: 10px;
    }

    button {
        background-color: #dbdddb;
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

    button:hover {
        background-color: #dbdbdb;
    }
</style>


<div class="container">
    <h1>Edit Product</h1>
    <form action="/admin/editproduct/<%= product._id %>" method="POST" enctype="multipart/form-data">
        <div class="form-group">


            <p>
                <label for="productCategory">Product Category:</label>

                <select id="productCategory" name="productCategory" required>
                    <% if (category.length > 0) { %>
                        <% category.forEach(categories => {%>
                         <option value=<%= categories._id %>><%= categories.category %></option>
                         <% })%>
                         <% } else {%>
                             
                         <option value="Mens">no categories</option>
                         <% }%>

                </select>
              </p>


            <p>
                <label for="productName">Product Name:</label>
                <input type="text" id="productName" name="productName" value="<%= product.productName %>" required><br><br>
            </p>
            <p>
                <label for="productImage">Product Image:</label>
                <input type="file" id="productImage" name="productImage" accept="image/*" multiple>
            
                <% product.productImage && product.productImage.length > 0
                   ? product.productImage.forEach(image => { %>
                        <img src="/malefashion-master/images/<%= image.filename %>" width="100">
                    <% })
                   : '' %>
            </p>
            
            <p>
                <label for="productPrice">Product Price:</label>
                <input type="number" id="productPrice" name="productPrice" value="<%= product.productPrice %>" step="0.01" required><br><br>
            </p>
            <p>
                <label for="productDescription">Product Description:</label>
                <textarea id="productDescription" name="productDescription" required><%= product.productDescription %></textarea><br><br>
            </p>

          

            <p>
                <label for="productStock">Product Stock:</label>
                <input type="number" id="productStock" name="productStock" value="<%= product.productStock %>" required><br><br>
            </p>
            <button type="submit" class="btn btn-primary">Update Product</button>
        </div>
    </form>
</div>
