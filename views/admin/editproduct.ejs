<%- include('../layout/dashhead') %>


<div class="container">
    <h1>Edit Product</h1>
    <form action="/admin/editproduct/<%= product._id %>" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <p>
                <label for="productName">Product Name:</label>
                <input type="text" id="productName" name="productName" value="<%= product.productName %>" required><br><br>
            </p>
            <p>
                <label for="productImage">Product Image:</label>
                <input type="file" id="productImage" name="productImage" accept="image/*" multiple>
            
                <% product.productImage && product.productImage.length > 0
                   ? product.productImage.forEach(image => { %>
                        <img src="/malefashion-master/images/<%= image.filename %>" width="100">
                    <% })
                   : '' %>
            </p>
            
            <p>
                <label for="productPrice">Product Price:</label>
                <input type="number" id="productPrice" name="productPrice" value="<%= product.productPrice %>" step="0.01" required><br><br>
            </p>
            <p>
                <label for="productDescription">Product Description:</label>
                <textarea id="productDescription" name="productDescription" required><%= product.productDescription %></textarea><br><br>
            </p>
            <p>
                <label for="productCategory">Product Category:</label>
                <input type="text" id="productCategory" name="productCategory" value="<%= product.productCategory %>" required><br><br>
            </p>
            <button type="submit" class="btn btn-primary">Update Product</button>
        </div>
    </form>
</div>
