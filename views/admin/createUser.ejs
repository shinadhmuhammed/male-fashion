
<%- include('../layout/header') %>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h1 class="mb-0">Create New User</h1>
                </div>
                <div class="card-body">
                    <form action="/admin/createUser" method="post">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name" placeholder="Name" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Email" required>
                        </div>
                        <div class="mb-3">
                            <label for="mno" class="form-label">Mobile Number</label>
                            <input type="number" class="form-control" id="mno" name="mno" placeholder="Mobile Number" required>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                        </div>
                        <a href="/admin/dashboard" class="btn btn-md btn-block btn-danger"
                        ><i class="fab fa-google me-1"></i>Go Back</a>
                        <button type="submit" class="text-center btn btn-success ">Create </button>
                    </form>

                    <% if (typeof message !== 'undefined') { %>
                        <p class="mt-3 text-success"><%= message %></p>
                    <% } %>
                </div>
            </div>
        </div>

    </div>
</div>

<%- include('../layout/footer') %>
