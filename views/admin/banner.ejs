<%- include('../layout/dashhead') %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Banners</title>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f4f4f4;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 20px;
    }

    h1 {
      color: #333;
    }

    button {
      background-color: #4CAF50;
      color: white;
      padding: 10px 15px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    button:hover {
      background-color: #45a049;
    }

    .banner-container {
      display: flex;
      flex-wrap: wrap;
    }

    .banner-item {
      background-color: #fff;
      border: 1px solid #ddd;
      border-radius: 5px;
      margin: 10px;
      padding: 15px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    img {
      max-width: 100%;
      height: auto;
      margin-top: 10px;
    }

    hr {
      border: 0.5px solid #ddd;
      margin-top: 15px;
    }
  </style>
</head>
<body>
  <div class="container">
    
    <h1>Banners</h1>
    <a href="/admin/addbanner">
        <button>Add Banner</button>
      </a>
    <div class="banner-container">
      <% banners.forEach((banner) => { %>
        <div class="banner-item">
          <h2><%= banner.title %></h2>
          <p>Description: <%= banner.description %></p>
          <p>Coupon Code: <%= banner.couponCode %></p>
          <p>Discount Percentage: <%= banner.discountPercentage %></p>
          <p>Expiry Date: <%= banner.expiryDate.toDateString() %></p>
          <p>Is Active: <%= banner.isActive %></p>

          <% if (banner.bannerImage && banner.bannerImage.filename) { %>
            <img src="/malefashion-master/images/<%= banner.bannerImage.filename %>" alt="Banner Image">
          <% } %>

          <hr>
          <a href="/admin/editbanner/<%= banner._id %>">
            <button>Edit Banner</button>
          </a>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
